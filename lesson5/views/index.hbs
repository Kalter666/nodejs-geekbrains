<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>{{title}}</title>
</head>
<body>
<form action="/task" method="post">
    {{#each tasks}}
        <div>
            {{this.id}}. {{this.name}} <input type="radio" value="{{this.id}}" title="select me">
            <p>
                {{this.text}}
            </p>
        </div>
    {{/each}}
    <input type="submit">
</form>
<a href="/add">add new</a>
</body>
</html>